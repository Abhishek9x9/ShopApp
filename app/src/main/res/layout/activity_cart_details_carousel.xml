<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:weightSum="1"
    android:layout_height="fill_parent"
    >
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/search_header_background">
        <ImageView
            android:layout_width="77dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/shop_local"
            android:paddingLeft="@dimen/padding_half"
            android:paddingTop="@dimen/padding_half"
            android:paddingBottom="@dimen/padding_half"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/item_image_cart"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:src="@drawable/cart"
                android:paddingTop="@dimen/padding_half"
                android:paddingBottom="@dimen/padding_half"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/itemDetailCartTextView"
                android:layout_toStartOf="@+id/itemDetailCartTextView" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:text="(2)"
                android:textColor="@android:color/white"
                android:paddingRight="@dimen/padding_small"
                android:paddingTop="@dimen/padding"
                android:paddingBottom="@dimen/padding_double"
                android:id="@+id/itemDetailCartTextView"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="300dp"
        android:layout_gravity="top"
        android:orientation="horizontal">

        <com.example.abhishekshukla.shopapp.carousel.CoverFlow
            android:id="@+id/coverflow"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_gravity="bottom"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/padding_small"
        android:orientation="vertical">

        <GridLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/item_review_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Colgate Perposedent"
            android:layout_gravity="center_horizontal"
            android:textSize="20sp"
            android:typeface="sans"
            android:gravity="center_horizontal"/>

        <TextView
            android:id="@+id/item_review_rate"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="126/- Rs"
            android:layout_gravity="center_horizontal"
            android:textSize="20sp"
            android:typeface="sans"
            android:gravity="center_horizontal"/>

        <TextView
            android:id="@+id/item_review_discount"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="20% Off"
            android:layout_gravity="center_horizontal"
            android:textSize="40sp"
            android:typeface="sans"
            android:textColor="@color/accent_material_light"
            android:gravity="center_horizontal"/>



        <Button
            android:id="@+id/btnCheckout"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:gravity="center|bottom"
            android:background="@drawable/nice_button"
            android:text="@string/cart_checkout"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:shadowRadius="1"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowColor="@android:color/black"
            android:layout_alignParentBottom="true"
            ></Button>
        </GridLayout>
    </RelativeLayout>
</LinearLayout>