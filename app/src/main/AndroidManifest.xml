<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.abhishekshukla.shopapp" >

    <!-- Use Permission for Fireview -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <!-- Sync with content provider when device is booted.   sync -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <!-- Use Permission -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.BROADCAST_STICKY" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.WRITE_SETTINGSs" />
    <uses-permission android:name="android.permission.READ_LOGS" />

    <application
        android:name=".ShopApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".SearchActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ItemDetailActivity"
            android:label="@string/app_name" >
        </activity>

        <provider
            android:name=".provider.SuggestionsProvider"
            android:authorities="com.example.abhishekshukla.shopapp.provider.SuggestionsProvider" />

        <activity
            android:name=".CartActivity"
            android:label="Cart" >
        </activity>
        <activity
            android:name=".NewAddress"
            android:label="@string/title_activity_new_address" >
        </activity>
        <activity
            android:name=".AddressActivity"
            android:label="AddressActivity" >
        </activity>
        <activity
            android:name=".carousel.CartDetailCarouselAcitivity"
            android:label="@string/title_activity_cover_flow_example2"
            android:parentActivityName=".SearchActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.abhishekshukla.shopapp.SearchActivity" />
        </activity>
    </application>

</manifest>
